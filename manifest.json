{
  "manifest_version": 3,

  "name": "Pause All Videos",
  "description": "Pauses all videos in all tabs",
  "author": "Christopher Ptak",

  "version": "0.2",

  "action": {},
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  }
}
